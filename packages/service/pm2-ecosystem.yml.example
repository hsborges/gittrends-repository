apps:
  - name: queue-board
    script: util/queue-board.js

  - name: scheduler
    script: scheduler.js
    args: all
    instance_var: INSTANCE_ID
    cron_restart: '0/4 * * * *'
    autorestart: false

  - name: updater
    script: updater.js
    args: repos stargazers watchers tags releases dependencies --workers 1
    instances: 1
    exec_mode: cluster
    instance_var: INSTANCE_ID

  - name: issues
    script: updater.js
    args: issues --workers 1
    instances: 1
    exec_mode: cluster
    instance_var: INSTANCE_ID

  - name: pulls
    script: updater.js
    args: pulls --workers 1
    instances: 1
    exec_mode: cluster
    instance_var: INSTANCE_ID

  - name: users
    script: updater.js
    args: users --workers 1
    instances: 1
    exec_mode: cluster
    instance_var: INSTANCE_ID
