apps:
  - name: proxy-server
    script: node_modules/.bin/github-proxy-server
    args: --port 3000 --request-interval 50 --tokens tokens.txt

  - name: scheduler
    interpreter_args: -r @gittrends/env-config
    script: scheduler.js
    args: all
    instance_var: INSTANCE_ID
    cron_restart: '0 */4 * * *'
    autorestart: false

  - name: updater
    interpreter_args: -r @gittrends/env-config
    script: updater.js
    args: --workers 1
    instances: 1
    exec_mode: cluster
    instance_var: INSTANCE_ID
